        function validationForm() {

            var dataJson = null;
            var dataPerson= new Array($("#name"), $("#surname"), $("#document"), $("#age"));
            var returnValidate = false;
            var expressionData = /^\s+$/;


            for (var i = 0; i < dataPerson.length; i++) {
                //alert(dataPerson[i]);
                if (!expressionData.test(dataPerson[i].val())) {
                    dataPerson[i].addClass("okInput");
                    console.log(dataPerson[i].val());
                    returnValidate = true;


                } else {
                    dataPerson[i].removeClass("okInput").addClass("errorInput");
                }

            }
            if (returnValidate) {

                dataJson = new Object();
                dataJson.name = dataPerson[0].val();
                dataJson.surname = dataPerson[1].val();
                dataJson.document = dataPerson[2].val();
                dataJson.age = dataPerson[3].val();
                //[
                //    { "name": dataPerson[0].val(), "surname": dataPerson[1].val(), "document": dataPerson[2].val(), "age": dataPerson[3].val() }
                //]
            console.log(dataJson);
            sendData(dataJson);
            }

            return false;

        }
        function sendData(dataJson) {
            debugger;
            var model = JSON.stringify(dataJson);
            $.ajax({
                url: '@Url.Action("SendAjax","Person")',
                cache:false,
                type: 'POST',
                data: model,
                dataType: "json",
                contentType: "application/json",
                success: function (result) {
                    //$("#result2").html(result);
                    console.log(result);
                    loadList(result);
                },
                error: function (response) {
                    alert(response.responseText);

                }

            });


        }
        function loadList(dataJson) {

            var count = Object.keys(dataJson).length;
            var table = $('<table></table>').addClass('errorInput');
            for (i = 0; i < dataJson.length; i++) {
                var row = $('<tr></tr>').addClass('okInput').text('result ' + dataJson[i]);

                table.append(row);
            }

            $('#result2').append(table);
            console.log(count);
        }
</script>
